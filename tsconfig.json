{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "rootDir": ".",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}